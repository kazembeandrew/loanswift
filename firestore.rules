rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // User profile documents
    match /users/{userId} {
      allow read: if request.auth != null;
      allow create: if request.auth.uid == userId; 
      allow update: if request.auth.uid == userId || request.auth.token.role in ['admin', 'hr'];
    }

    // Settings can be read by any authenticated user, but only modified by admin.
    match /settings/{docId} {
        allow read: if request.auth != null;
        allow write: if request.auth.token.role == 'admin';
    }

    // Portfolio collections (Borrowers, Loans, Payments) are managed by loan officers and management.
    // HR is excluded from these collections.
    match /borrowers/{borrowerId} {
        allow read, write: if request.auth.token.role in ['loan_officer', 'admin', 'ceo', 'cfo'];
    }
    match /loans/{loanId} {
        allow read, write: if request.auth.token.role in ['loan_officer', 'admin', 'ceo', 'cfo'];
    }
    match /loans/{loanId}/payments/{paymentId} {
        allow read, write: if request.auth.token.role in ['loan_officer', 'admin', 'ceo', 'cfo'];
    }

    // Situation Reports can be read by all staff, but only created/updated by loan officers and management.
    match /situationReports/{reportId} {
        allow read: if request.auth != null;
        allow write: if request.auth.token.role in ['loan_officer', 'admin', 'ceo', 'cfo'];
    }

    // Chat conversations are restricted to participants.
    match /conversations/{conversationId} {
        allow read, write: if request.auth.uid in resource.data.participants;
    }
    match /conversations/{conversationId}/messages/{messageId} {
        allow read, write: if request.auth.uid in get(/databases/$(database)/documents/conversations/$(conversationId)).data.participants;
    }
    
    // Accounting documents can only be accessed by finance-related roles and administrators.
    match /accounts/{accountId} {
        allow read, write: if request.auth.token.role in ['admin', 'ceo', 'cfo'];
    }
    match /journal/{entryId} {
        allow read, write: if request.auth.token.role in ['admin', 'ceo', 'cfo'];
    }
  }
}
