rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions to check roles
    function isLoanOfficerOrAbove() {
      return request.auth.token.role in ['loan_officer', 'cfo', 'admin', 'ceo', 'hr'];
    }

    function isCfoOrAbove() {
      return request.auth.token.role in ['cfo', 'admin', 'ceo'];
    }

    function isAdmin() {
      return request.auth.token.role == 'admin';
    }

    // Users can view any profile, but only update their own (or admins can update any)
    match /users/{userId} {
      allow get, list: if request.auth != null;
      allow create: if isCfoOrAbove() || request.auth.token.role == 'hr';
      allow update: if request.auth.uid == userId || request.auth.token.role in ['admin', 'hr'];
      allow delete: if isAdmin();
    }

    // Loan officers and above can manage borrowers
    match /borrowers/{borrowerId} {
      allow read, write: if isLoanOfficerOrAbove();
    }

    // Loan officers and above can manage loans
    match /loans/{loanId} {
      allow read, write: if isLoanOfficerOrAbove();
    }
    
    // Payments are a subcollection. This rule allows authorized users to query across all payments.
    match /{path=**}/payments/{paymentId} {
       allow read, write: if isLoanOfficerOrAbove();
    }

    // CFO, Admins, and CEO can manage financial records
    match /accounts/{accountId} {
        allow read, write: if isCfoOrAbove();
    }
    match /journal/{journalId} {
        allow read, write: if isCfoOrAbove();
    }

    // Only Admins can change settings or delete all data
    match /settings/{settingId} {
        allow read: if isLoanOfficerOrAbove();
        allow write: if isAdmin();
    }
    
    // Participants can read/write their own messages.
    match /conversations/{conversationId} {
      allow read, create, update: if request.auth.uid in resource.data.participants;
      
      match /messages/{messageId} {
        allow read, create: if request.auth.uid in get(/databases/$(database)/documents/conversations/$(conversationId)).data.participants;
      }
    }
    
    // Loan officers and above can create and read reports. Admins can update them.
    match /situationReports/{reportId} {
        allow read, create: if isLoanOfficerOrAbove();
        allow update: if isCfoOrAbove();
    }
  }
}
