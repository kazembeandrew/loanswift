rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // User profile documents
    match /users/{userId} {
      allow read: if request.auth != null; // Any authenticated user can read profiles (for chat, etc.)
      allow create: if request.auth.uid == userId; // A user can create their own profile document
      allow update: if request.auth.uid == userId || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['admin', 'ceo'];
    }

    // Settings can only be read by any user, but only modified by admin/ceo
    match /settings/{docId} {
        allow read: if request.auth != null;
        allow write: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['admin', 'ceo'];
    }

    // Loans and Borrowers can be managed by officers, admins, and ceo
    match /borrowers/{borrowerId} {
        allow read, write: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['loan_officer', 'admin', 'ceo', 'cfo', 'hr'];
    }
    match /loans/{loanId} {
        allow read, write: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['loan_officer', 'admin', 'ceo', 'cfo'];
    }
    match /loans/{loanId}/payments/{paymentId} {
        allow read, write: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['loan_officer', 'admin', 'ceo', 'cfo'];
    }

    // Situation Reports
    match /situationReports/{reportId} {
        allow create: if request.auth != null; // Any authenticated user can create a report
        allow read, update: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['admin', 'ceo', 'cfo'] || resource.data.reportedBy == request.auth.uid;
    }

    // Chat functionality
    match /conversations/{conversationId} {
        allow read, write: if request.auth.uid in resource.data.participants;
    }
    match /conversations/{conversationId}/messages/{messageId} {
      // Anyone in the conversation can read/write messages.
      allow read, write: if request.auth.uid in get(/databases/$(database)/documents/conversations/$(conversationId)).data.participants;
    }
    
    // Accounting documents can only be accessed by finance-related roles
    match /accounts/{accountId} {
        allow read, write: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['admin', 'ceo', 'cfo'];
    }
    match /journal/{entryId} {
        allow read, write: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['admin', 'ceo', 'cfo'];
    }
    
    // Deletion is not allowed through client SDKs by default.
    match /{path=**} {
      allow delete: if false;
    }
    
  }
}
